package oopIntroOdev;

public class Main {

	public static void main(String[] args) {
		public static void main(String[] args) {
			
			// özellikler 2 farklý yöntem ile girildi
			
			Day day1 = new Day(1,"classlar", "kaydý izleyiniz.", "class nedir? araþtýrýnýz.","deðerlendiriniz.");
			
			Day day2 = new Day();
			day2.gun=2;
			day2.dersProgrami="inheritance";
			day2.gunSonuKayit="kaydý izleyiniz.";
			day2.odev="inheritance nedir? araþtýrýnýz.";
			day2.degerlendirme="deðerlendiriniz.";
			
			
			Day day3 = new Day();
			day3.gun=3;
			day3.dersProgrami="interface";
			day3.gunSonuKayit="kaydý izleyiniz";
			day3.odev="interface nedir? araþtýrýnýz.";
			day3.degerlendirme="deðerlendiriniz.";
			
					
			
			Day[] days = {day1, day2, day3};  //days dizisi
			
			
			
			for (Day day : days) {   // for dögüsü ile days dizisi elemanlarý gezildi
			
				System.out.println(day.odev);  
			}
			
	//--------------------------------------------------------------------
		
			
		Course course1= new Course(123,"C#","Engin Demiroð");
		
		Course course2= new Course();
		    course2.id=456;
			course2.name="Java";
			course2.teacher="Engin Demiroð";
		
			
			
			Course[] courses = {course1, course2};  //course dizisi
			
			
			
			for ( Course course : courses ) {   // for dögüsü ile course dizisi elemanlarý gezildi
				
				
				System.out.println(course.name);
			}
			
	//---------------------------------------------------------------------
			
			DayManager dayManager = new DayManager(); 
			dayManager.finishAndContinue(day1);  //metotlar çaðrýldý
			dayManager.previousLesson(day1);

		
	}

	}

}
